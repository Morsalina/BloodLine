<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    tools:context=".ViewDonationHistory">

    <TextView
        android:id="@+id/textMs"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="start"
        android:background="#37383b"
        android:gravity="center|start"
        android:text="  Donation History"
        android:textColor="#f4f2f2"

        android:textSize="22sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllHistory"
        android:layout_width="match_parent"
        android:layout_height="534dp"
        android:background="#212121"
        app:layoutManager="LinearLayoutManager" />

    <TextView
        android:id="@+id/ErrorMessageShow1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textColor="#E60909"
        android:textSize="24sp" />

    <Button
        android:id="@+id/backToMainFromHistory1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:text="back to main menu" />


</LinearLayout>